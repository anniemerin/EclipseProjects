package collections;

import java.util.ArrayList;

public class ArrayListClass {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		ArrayList <String> List =new ArrayList <>();
		
		List.add("Merin");
		List.add("Annie");
		List.add("Nathania");
		List.add("Thomas");
		List.add("Isabel");
		List.add("Thomas");
		List.add("Merin");
		
		System.out.println("Size of the List : "+List.size());
		
		// Display Elements.
		
		System.out.println("\nDisplay Elements in the List");
		for (String name:List)
			System.out.println(name);
		
		List.remove(5);
		
		System.out.println("\nDisplay Elements in the List after removing element at 6th position");
		for (String name:List)
			System.out.println(name);
		
		System.out.println("\nTo check if a particular string exists in list " +List.contains("merin"));
		
		List.clear();
		
		System.out.println("\nDisplay Elements in the List after clearing");
		for (String name:List)
			System.out.println(name);

		
	}

}
